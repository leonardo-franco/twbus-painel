{
  "name": "twbus-painel",
  "version": "2.0.0",
  "description": "Painel interativo para informações de parada de ônibus em tempo real",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "npx live-server --port=3000 --open=/index.html",
    "build": "npm run lint && npm run test",
    "start": "npx serve . -p 3000",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "lint": "npx eslint src/ --ext .js",
    "lint:fix": "npx eslint src/ --ext .js --fix",
    "format": "npx prettier --write src/",
    "format:check": "npx prettier --check src/",
    "validate": "npm run lint && npm run test",
    "deploy": "npm run build && npx vercel --prod",
    "security-check": "npx audit-ci --moderate",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "preview": "npx serve . -p 4173"
  },
  "keywords": [
    "bus",
    "transport",
    "pwa",
    "real-time",
    "public-transport",
    "sao-paulo",
    "javascript",
    "es6",
    "modules"
  ],
  "author": "TwBus Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardo-franco/twbus-painel.git"
  },
  "bugs": {
    "url": "https://github.com/leonardo-franco/twbus-painel/issues"
  },
  "homepage": "https://twbus.vercel.app",
  "devDependencies": {
    "serve": "^14.2.0",
    "live-server": "^1.2.2",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^2.8.0",
    "audit-ci": "^6.6.0"
  },
  "engines": {
    "node": ">=16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "pwa": {
    "name": "TwBus - Painel de Parada",
    "short_name": "TwBus",
    "theme_color": "#764ba2",
    "background_color": "#667eea",
    "display": "standalone",
    "scope": "/",
    "start_url": "/"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error",
      "arrow-spacing": "error",
      "object-shorthand": "error",
      "prefer-template": "error",
      "template-curly-spacing": "error",
      "quote-props": ["error", "as-needed"],
      "no-multiple-empty-lines": ["error", { "max": 1 }],
      "eol-last": "error",
      "comma-dangle": ["error", "never"],
      "semi": ["error", "always"]
    },
    "globals": {
      "BusPanelTester": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
